<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/_head', { title: title || 'Collection' }) %>
  </head>
  <body>
    <header>
      <%- include('../partials/_nav') %>
    </header>
    <main class="container collection">
      <div class="grid">
        <% items.forEach(function(item){ %>
          <article class="card">
            <div class="media">
              <a href="/items/<%= item.slug %>"><img src="<%= item.image %>" alt="<%= item.title %>" /></a>
            </div>
            <div class="body">
              <a class="title" href="/items/<%= item.slug %>"><%= item.title %></a>
              <% if (item.mileage) { %>
                <div class="mileage"><%= item.mileage %></div>
              <% } %>
              <div class="meta">
                <span class="cat"><a href="/category/<%= item.category %>"><%= item.category %></a></span>
              </div>
              <div class="price"><%= item.price %></div>
            </div>
          </article>
        <% }) %>
      </div>
    </main>
    <footer>
      <%- include('../partials/_footer') %>
    </footer>
  </body>
</html>
