<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/_head', { title: title || 'Home' }) %>
  </head>
  <body>
    <header>
      <%- include('../partials/_nav') %>
    </header>

    <section class="home-hero" role="region" aria-label="Welcome">
      <div class="hero-content">
        <h1>Welcome to AutoTrading!</h1>
        <h2>Your one-stop shop for buying and selling cars</h2>
        <h3>Featured Listings</h3>
      </div>
    </section>

    <main class="container collection">
      <div class="grid">
        <% (items || []).forEach(function(item){ %>
          <article class="card">
            <div class="media">
              <a href="/items/<%= item.slug %>"><img src="<%= item.image %>" alt="<%= item.title %>" /></a>
            </div>
            <div class="body">
              <a class="title" href="/items/<%= item.slug %>"><%= item.title %></a>
              <% if (item.mileage) { %>
                <div class="mileage"><%= item.mileage %></div>
              <% } %>
              <div class="meta">
                <span class="cat"><a href="/category/<%= item.category %>"><%= item.category %></a></span>
              </div>
              <div class="price"><%= item.price %></div>
            </div>
          </article>
        <% }) %>
      </div>
    </main>
    <footer>
      <%- include('../partials/_footer') %>
    </footer>
  <a href="/admin" style="position:fixed;left:8px;bottom:8px;opacity:0.08;color:inherit;text-decoration:none;padding:6px 8px;border-radius:4px;transition:opacity .15s,background .15s" onfocus="this.style.opacity=1;this.style.background='rgba(255,255,255,0.04)';" onblur="this.style.opacity=0.08;this.style.background='transparent';">Admin</a>
  </body>
  </body>
</html>
