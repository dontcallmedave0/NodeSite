<header class="site-header">
  <div class="container nav" role="navigation" aria-label="Main">
  <a href="/" class="brand">AutoTrading</a>
    <button class="menu-toggle" aria-label="Toggle menu">â˜°</button>
    <nav class="nav-links" aria-label="Primary navigation">
      <a href="/">Home</a>
      <a href="/items">All</a>
      <a href="/category/Cars">Cars</a>
      <a href="/category/Trucks">Trucks</a>
      <a href="/category/SUVs">SUVs</a>
      <a class="button primary" href="/contact">Contact</a>
      <button id="a11y-toggle" class="btn ghost" aria-pressed="false" aria-label="Toggle accessibility mode">A11Y</button>
    </nav>
  </div>
</header>

<script>
document.addEventListener('DOMContentLoaded', function(){
  var btn = document.querySelector('.menu-toggle');
  var nav = document.querySelector('.nav-links');
  if (!btn || !nav) return;
  btn.addEventListener('click', function(){
    var open = nav.classList.toggle('open');
    btn.setAttribute('aria-expanded', open);
  });
  // Accessibility toggle
  var a11y = document.getElementById('a11y-toggle');
  if(a11y){
    // initialize from localStorage
    var enabled = localStorage.getItem('a11y') === '1';
    if(enabled) document.body.classList.add('a11y');
    a11y.setAttribute('aria-pressed', enabled);
    a11y.addEventListener('click', function(){
      var on = document.body.classList.toggle('a11y');
      a11y.setAttribute('aria-pressed', on);
      localStorage.setItem('a11y', on ? '1' : '0');
    });
  }
});
</script>